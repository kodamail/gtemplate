*
* runid = 'OISST.v2'
*   cdir = ''
*
*
function rl_oisst( runid, varid_base, varid_lev, cdir, flag_show_dir )
  run = '' ; var = ''

  if( runid = 'OISST.v2' )
    run = 'OISST.v2'
    dir = '/cwork5/kodama/dataset_copy/oisst_v2'
    if( flag_show_dir = 1 ) ; return dir ; endif

    if( varid_base = 'sst' )
      fv   = dtopen( dir, 'sst.ctl' )
      var = 'sst.'fv'(z=1)'
    endif
  endif

  return run % ' ' % var
return
