*
* runid = 'MODIS'
*   cdir = 'monthly' or 'daily'
*
*
function rl_modis( runid, varid_base, varid_lev, cdir, flag_show_dir )
  run = '' ; var = ''

  if( runid = 'MODIS' )
    run = 'MODIS'
    dir = '/cwork5/kodama/dataset/modis_swr/data_grd/'cdir
    if( flag_show_dir = 1 ) ; return dir ; endif

    if( varid_base = 'sw_down_sfc' )
      fv   = dtopen( dir, 'swr.ctl' )
      var = 'swr.'fv'(z=1)'
    endif
  endif

  return run % ' ' % var
return
