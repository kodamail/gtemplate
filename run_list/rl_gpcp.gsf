*
* runid = 'GPCP.v2.2'
*   cdir = ''
*
*
function rl_gpcp( runid, varid_base, varid_lev, cdir, flag_show_dir )
  run = '' ; var = ''

  if( runid = 'GPCP.v2.2' )
    run = 'GPCP.v2.2'
    dir = '/mwork0/ngatm/NOAA/gpcp_v2.2/ctl'
    if( flag_show_dir = 1 ) ; return dir ; endif

    if( varid_base = 'precip' )
      fv   = dtopen( dir, 'gpcp_v2.2_psg.ctl' )
      var = 'precip.'fv'(z=1)'
    endif
  endif

  return run % ' ' % var
return
